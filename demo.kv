#:kivy 2.1.0

MDBoxLayout:
    orientation: "vertical"
    MDTopAppBar:
        title: "Multicast Mobile"
        screen_manager: screen_manager
        left_action_items:
            [
            ["home", lambda x: app.callback(self, screen_manager, "Home"), "Home"]
            ]
        right_action_items:
            [
            ["camera", lambda x: app.callback(self, screen_manager, "Record"), "Record"],
            ["account", lambda x: app.callback(self, screen_manager, "Account"), "Account"]
            ]
    
    ScreenManager:
        id: screen_manager
        Screen:
            name: "Home"
            id: home
              

        Screen:
            name: "Search"                   
            MDLabel:
                text: " search button"
                halign: "center" 
        Screen:
            name: "Record"
            FloatLayout:
                Label:
                # this label isn't displaying at all, which is strange
                    text: "Webcam from OpenCV?"
                    pos_hint: {"x":0.0, "y":0.5}
                    size_hint: 1.0, 0.2

                # Camera:
                #     id: camera
                #     resolution: (1920, 1080)
                #     play: True

                MDRaisedButton:
                    id: button
                    text: 'Start Video'
                    pos_hint: {"x":0.1, "y":0.05}
                    size_hint: 0.8, 0.15
                    font_size: self.width/20
                    background_normal: ""
                    background_color: "#12a8ff"
                    on_release: app.startstop()
                    

        Screen:
            name: "Account"                   
            MDLabel:
                text: "Hello, user!"
                halign: "center"

            MDLabel:
                
                text: "Welcome to our app! \n We "


        Screen:
            name: "Watch"
            MDLabel:
                text: "video"
                halign: "center"

            Video:
                id: stream_player


